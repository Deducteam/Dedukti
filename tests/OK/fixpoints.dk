def nat__rect :
  P : (n : T set nat -> U (type z)) ->
  f0 : T (type z) (P Z) ->
  f1 : (n : T set nat ->
       __ : T (type z) (P n) ->
       T (type z) (P (Succ n)) ) ->
  n: T set nat ->
  T (type z) (P n)
  :=
  P => f0 => f1 =>
  fixproj (type z) 1
    (c => c
       (SA 0 (type z) (prod set (type z) (type z) I nat (n => P n))))
    (c => c
      (nat__rect => n =>
        match____nat (type z) (n0 : T set nat => P n0)
          f0
          (n0 : T set nat => f1 n0 (nat__rect n0))
          n))
    0.


