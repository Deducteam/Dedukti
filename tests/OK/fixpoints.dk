(;--------------------  T public constructors  -----------------;)

def u : s : S -> s' : S ->
           p : eps (Axiom s s') -> U s'.

def prod : s1 : S -> s2 : S -> s3 : S ->
           p : eps (Rule s1 s2 s3) ->
           a : U s1 -> b : (T s1 a -> U s2) -> U s3.

def SubType : s : S -> s' : S -> U s -> U s' -> Bool.

def cast : s : S -> s' : S ->
           a : U s -> b  : U s' ->
           p : eps (SubType s s' a b) ->
           T s a -> T s' b.


