def vect__rect :

  P :
    (n : T set nat ->
     v : T set (vect n) ->
     U (type z)) ->
  f0 : T (type z) (P Z nil) ->
  f1 :
    (n : T set nat ->
     n0 : T set nat ->
     v : T set (vect n) ->
     __ : T (type z) (P n v) ->
     T (type z) (P (Succ n) (cons n n0 v))) ->
  n : T set nat ->
  v : T set (vect n) ->
  T (type z) (P n v) :=

