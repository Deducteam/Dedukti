#!/bin/sh

COQINE_ROOT=../
COQ_LIB=/usr/lib/coq/theories/
LIBS=$COQ_LIB*
INCLUDE=/usr/lib/coq/plugins/

rm depend

for i in $LIBS
do
    for t in $i/*.vo
    do
	if $COQINE_ROOT/bin/coqine -h --root Coq -I $INCLUDE -I $COQ_LIB $t
	then echo "Success : $t"
	else echo "Failed : $t"
	fi
	$COQINE_ROOT/bin/make_deps --root Coq -I $INCLUDE -I $COQ_LIB $t >> depend
    done
done
